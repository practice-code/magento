<config>
    <modules>
        <M3_Cusdesign>
            <version>0.1.0</version>
        </M3_Cusdesign>
    </modules>
    <frontend>
        <routers>
            <cusdesign>
                <use>standard</use>
                <args>
                    <module>M3_Cusdesign</module>
                    <frontName>cusdesign</frontName>
                </args>
            </cusdesign>
        </routers>
        <layout>
            <updates>
                <cusdesign>
                    <file>cusdesign.xml</file>
                </cusdesign>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<cusdesign>
				<use>admin</use>
				<args>
					<module>M3_Cusdesign</module>
					<frontName>customize-designs</frontName>
				</args>
			</cusdesign>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<cusdesign module="cusdesign">
				<title>Cusdesign</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="cusdesign">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>cusdesign/adminhtml_cusdesign</action>
					</items>
				</children>
			</cusdesign>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<M3_Cusdesign>
							<title>Cusdesign Module</title>
							<sort_order>10</sort_order>
						</M3_Cusdesign>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<cusdesign>
					<file>cusdesign.xml</file>
				</cusdesign>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <cusdesign>
                <class>M3_Cusdesign_Model</class>
                <resourceModel>cusdesign_mysql4</resourceModel>
            </cusdesign>
            <cusdesign_mysql4>
                <class>M3_Cusdesign_Model_Mysql4</class>
                <entities>
                    <cusdesign>
                        <table>cusdesign</table>
                    </cusdesign>
                </entities>
            </cusdesign_mysql4>
        </models>
        <resources>
            <cusdesign_setup>
                <setup>
                    <module>M3_Cusdesign</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cusdesign_setup>
            <cusdesign_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cusdesign_write>
            <cusdesign_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cusdesign_read>
        </resources>
        <blocks>
            <cusdesign>
                <class>M3_Cusdesign_Block</class>
            </cusdesign>
        </blocks>
        <helpers>
            <cusdesign>
                <class>M3_Cusdesign_Helper</class>
            </cusdesign>
        </helpers>
    </global>
</config>